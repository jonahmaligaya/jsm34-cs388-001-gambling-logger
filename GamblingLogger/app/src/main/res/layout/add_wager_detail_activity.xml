<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WagerDetailActivity">


    <TextView
        android:id="@+id/wager_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="Title"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/enter_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enter_title" />

    <EditText
        android:id="@+id/enter_title"
        android:layout_width="193dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:ems="14"
        android:hint="Ex: Jon Jones vs. Jake Paul"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toEndOf="@id/wager_title_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wager_profit_or_loss_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profit or Loss"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/enter_profit_or_loss_amount"
        app:layout_constraintEnd_toStartOf="@+id/enter_profit_or_loss_amount"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enter_profit_or_loss_amount"
        app:layout_constraintVertical_bias="0.458" />

    <EditText
        android:id="@+id/enter_profit_or_loss_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:ems="14"
        android:hint="Ex: 4.43 or -10.52"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toEndOf="@id/wager_profit_or_loss_label"
        app:layout_constraintTop_toBottomOf="@+id/enter_title" />

    <TextView
        android:id="@+id/wager_odds_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odds"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/enter_odds"
        app:layout_constraintEnd_toEndOf="@id/wager_profit_or_loss_label"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enter_odds"
        app:layout_constraintVertical_bias="0.291"
        app:layout_goneMarginLeft="16dp" />

    <EditText
        android:id="@+id/enter_odds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="5"
        android:hint="Ex: -200"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enter_profit_or_loss_amount"
        app:layout_constraintTop_toBottomOf="@+id/enter_profit_or_loss_amount" />

    <Button
        android:id="@+id/add_wager_button_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Add Wager"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>